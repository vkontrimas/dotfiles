[alias]
	st = status
	amend = commit --amend
	lll = log
	ll = !git --no-pager log --oneline -60
	l = !git --no-pager log --oneline -20
	c = commit
	a = commit --amend
	af = commit --amend --no-edit
	ch = checkout
	cf = commit --fixup

[status]
	short = true
	branch = true

[init]
	defaultbranch = main

[core]
	pager = delta

[interactive]
	difffilter = delta --color-only

[delta]
	navigate = true
	dark = true
