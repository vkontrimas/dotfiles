# Swap caps lock and escape
exec_always --no-startup-id xmodmap -e "clear lock"
exec_always --no-startup-id xmodmap -e "keycode 9 = Caps_Lock"
exec_always --no-startup-id xmodmap -e "keycode 66 = Escape"

# Swap alt and win
exec_always --no-startup-id xmodmap -e "clear mod1"
exec_always --no-startup-id xmodmap -e "keycode 64 = Super_L"
exec_always --no-startup-id xmodmap -e "clear mod5"
exec_always --no-startup-id xmodmap -e "keycode 108 = Super_L"
exec_always --no-startup-id xmodmap -e "clear mod4"
exec_always --no-startup-id xmodmap -e "keycode 133 = Alt_L"

# Enable tap to click 
# (see readme for meaning)
exec_always --no-startup-id xinput set-prop 11 337 1
exec_always --no-startup-id xinput set-prop 11 338 1

# Enable natural scroll
exec_always --no-startup-id xinput set-prop 11 316 1
exec_always --no-startup-id xinput set-prop 11 317 1
