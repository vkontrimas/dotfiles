# Source Prezto.
if [[ -s "${ZDOTDIR:-$HOME}/.zprezto/init.zsh" ]]; then
  source "${ZDOTDIR:-$HOME}/.zprezto/init.zsh"
fi

# Customize to your needs...
bindkey -v

alias vim=nvim
alias fd=fdfind

export FZF_DEFAULT_COMMAND='rg --files'

# fnm
export PATH="/home/$USER/.local/share/fnm:$PATH"
eval "`fnm env`"

# flyctl
export FLYCTL_INSTALL="/home/$USER/.fly"
export PATH="$FLYCTL_INSTALL/bin:$PATH"

# Fancy function to make intermdiate directories and touch a file
function c() {
  if [[ $# -ne 1 ]]; then
    echo "Usage: t /path/to/file"
    echo "Creates an empty file and any intermediate directories if they don't already exist."
    return 1
  fi

  local destfile=$1
  local destdir="$(dirname $destfile)"

  if [ -e "$destfile" ]; then
    echo "Destination path already exists." >&2
    return 2
  else
    mkdir -p "$(dirname "$1")" && touch "$1"
  fi
}

